@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
<div class="container">
    <h1>Latest news</h1>
    <div class="row">
        @{
                //get all the news from the News section, but only the first 3
                var news = Model.Content.Site().Descendants<News>()
                    .OrderBy(x => x.NewsDate)
                    .Reverse()
                    .Take(3);

                //present the news
                foreach (var item in news)
                {
                <div class="col-md-4">
                    <h2>@item.Headline</h2>
                    <div>@item.NewsDate.ToString("dd/MM/yyyy")</div>
                    <p>@item.Excerpt</p>
                    <img src="@item.NewsImage.Url" class="img-fluid" alt="" />
                    <a href="@item.Url">Read more</a>
                </div>
            }
        }
    </div>
</div>